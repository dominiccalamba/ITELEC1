public class Main {
    public static void main(String[] args) {
        // Define two integer numbers
        int num1 = 10;
        int num2 = 10;

        // Addition (always possible for any two numbers)
        System.out.println("Addition: " + (num1 + num2));

        // Subtraction: only done if numbers are not equal
        if (num1 != num2) {
            System.out.println("Subtraction: " + (num1 - num2));
        } else {
            System.out.println("Subtraction skipped (numbers are equal)");
        }

        // Multiplication: only done if both numbers are not zero
        if (num1 != 0 && num2 != 0) {
            System.out.println("Multiplication: " + (num1 * num2));
        } else {
            System.out.println("Multiplication skipped (one number is zero)");
        }

        // Division: only done if denominator (num2) is not zero
        if (num2 != 0) {
            System.out.println("Division: " + (num1 / num2)); 
        } else {
            System.out.println("Division skipped (cannot divide by zero)");
        }
    }
}
